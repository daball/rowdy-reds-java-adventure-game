<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
  <parser>
    <target>public/docs</target>
    <encoding>utf8</encoding>
    <markers>
        <item>TODO</item>
        <item>FIXME</item>
    </markers>
    <extensions>
        <extension>php</extension>
        <extension>php3</extension>
        <extension>phtml</extension>
    </extensions>
    <visibility></visibility>
  </parser>
  <transformer>
    <target>public/docs</target>
    <transformations>
      <template name="responsive-twig" />
    </transformations>
  </transformer>
  <logging>
    <level>warn</level>
    <paths>
      <default>{APP_ROOT}/docs/log/{DATE}.log</default>
      <errors>{APP_ROOT}/docs/log/{DATE}.errors.log</errors>
    </paths>
  </logging>
  <files>
    <directory>app</directory>
  </files>
</phpdoc>
